<UserControl x:Class="LATravelManager.UI.Views.Services.Previews.PlaneService_Preview"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:viewmodels="clr-namespace:LATravelManager.Model.Services;assembly=LATravelManager.Model"
             d:DataContext="{d:DesignInstance viewmodels:PlaneService}"
             xmlns:converters="clr-namespace:LATravelManager.UI.Converters"
             mc:Ignorable="d"
             Padding="0 0 5 5"
             Width="455"
             Background="AliceBlue">
    <GroupBox Header="{Binding Tittle}">
        <Grid HorizontalAlignment="Stretch">
            <Grid.Resources>
                <converters:FloadToStringValueConverter x:Key="floatToStringConverter" />
                <Style TargetType="CheckBox">
                    <Setter Property="VerticalAlignment"
                            Value="Bottom" />
                </Style>
                <Style TargetType="Label">
                    <Setter Property="VerticalAlignment"
                            Value="Center" />
                    <Setter Property="HorizontalAlignment"
                            Value="Right" />
                    <Setter Property="Padding"
                            Value="5 5 5 0" />
                </Style>
            </Grid.Resources>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Label Margin="20 0 0 0 "
                   Grid.Row="0"
                   Grid.Column="0"
                   Content="Από:" />
            <Label Content="{Binding From}"
                   Grid.Row="0"
                   Width="100"
                   HorizontalAlignment="Left"
                   Grid.Column="1" />
            <Label Content="Πρός:"
                   Grid.Row="0"
                   Grid.Column="2" />
            <Label Content="{Binding To}"
                   Grid.Row="0"
                   Width="100"
                   HorizontalAlignment="Left"
                   Grid.Column="3" />
            <Label  Content="Με Επιστροφή"
                    Grid.Row="2"
                    Grid.Column="2" />
            <CheckBox Name="AllerretourCheckBox"
                      Grid.Row="2"
                      Grid.Column="3"
                      IsChecked="{Binding Allerretour}" />
            <Label Content="Εταιρεία:"
                   Grid.Row="2"
                   Grid.Column="0" />
            <Label Content="{Binding Airline.Name}"
                   Grid.Row="2"
                   HorizontalAlignment="Left"
                   Width="100"
                   Grid.Column="1" />
            <Label Content="Αναχώρηση:"
                   Grid.Row="3" />
            <Label Grid.Row="3"
                   Grid.Column="1"
                   Content="{Binding TimeGo,StringFormat='{}{0:dd/MM/yyyy-HH:mm}'}" />
            <Label Content="Επιστροφή:"
                   Grid.Row="3"
                   Grid.Column="2" />
            <Label Grid.Row="3"
                   HorizontalAlignment="Left"
                   Grid.Column="3"
                   Content="{Binding TimeReturn,StringFormat='{}{0:dd/MM/yyyy-HH:mm}'}" />
            <Label Content=" Στάση:"
                   Grid.Row="4" />
            <StackPanel Orientation="Horizontal"
                        Grid.Row="4"
                        Grid.Column="1"
                        Grid.ColumnSpan="1">
                <CheckBox IsChecked="{Binding Stop}"
                          Name="HasStopCheckBox"
                          Grid.Column="1"
                          IsEnabled="False"
                          Grid.Row="4" />
                <StackPanel Orientation="Horizontal"
                            Visibility="{Binding IsChecked, ElementName=HasStopCheckBox, Converter={StaticResource booleanToVisibilityConverter}}">
                    <Label Content="Πόλη:"
                           Grid.Row="4"
                           Grid.Column="2" />
                    <Label Content="{Binding StopPlace}"
                           Grid.Row="4"
                           Width="100"
                           Grid.Column="3" />
                </StackPanel>
            </StackPanel>
            <Label Content="Αναμονή:"
                   Grid.Row="4"
                   Visibility="{Binding IsChecked, ElementName=HasStopCheckBox, Converter={StaticResource booleanToVisibilityConverter}}"
                   Grid.Column="2" />
            <Label Grid.Row="4"
                   HorizontalAlignment="Left"
                   Grid.Column="3"
                   Visibility="{Binding IsChecked, ElementName=HasStopCheckBox, Converter={StaticResource booleanToVisibilityConverter}}"
                   Content="{Binding TimeReturn,StringFormat='{}{0:dd/MM/yyyy-HH:mm}'}" />
            <Label Content="PNR:"
                   Grid.Row="5" />
            <Label Content="{Binding PNR}"
                   Grid.Row="5"
                   HorizontalAlignment="Left"
                   Width="100"
                   Grid.Column="1" />
            <Label Content="Κέρδος:"
                   Grid.Row="6"
                   Grid.Column="0" />
            <Label Content="{Binding Profit,Converter={StaticResource floatToStringConverter},UpdateSourceTrigger=PropertyChanged,ValidatesOnDataErrors=True}"
                   Grid.Row="6"
                   HorizontalAlignment="Left"
                   
                   Grid.Column="1" />
            <Label Content="Κόστος(ΝΕΤ):"
                   Grid.Row="6"
                   Grid.Column="2" />
            <Label Content="{Binding NetPrice,Converter={StaticResource floatToStringConverter},UpdateSourceTrigger=PropertyChanged,ValidatesOnDataErrors=True}"
                   Grid.Row="6"
                   HorizontalAlignment="Left"
                   Grid.Column="3" />
        </Grid>
    </GroupBox>
</UserControl>