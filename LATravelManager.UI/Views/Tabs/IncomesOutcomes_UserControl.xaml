<UserControl x:Class="LATravelManager.UI.Views.Tabs.IncomesOutcomes_UserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:converters="clr-namespace:LATravelManager.UI.Converters"
             xmlns:viewmodels="clr-namespace:LATravelManager.UI.ViewModel.Tabs.TabViewmodels"
             xmlns:local="clr-namespace:LATravelManager.UI.Views.Tabs"
             mc:Ignorable="d"
             Background="White"
             d:DesignHeight="450"
             d:DataContext="{d:DesignInstance viewmodels:IncomesOutcomes_ViewModel}"
             d:DesignWidth="800">
    <UserControl.Resources>
        <converters:UserToVisibility x:Key="UserToVisibilityConverter" />
        <converters:FloadToStringValueConverter x:Key="FtoSConverter" />
    </UserControl.Resources>
    <Grid>
        <TabControl>
            <TabItem Header="Καταχώρηση">
                <local:AddIncomeOutcome_UserControl DataContext="{Binding AddIncomeOutcome_ViewModel}" />
            </TabItem>
            <TabItem Header="Προβολή">
                <local:IncomesOutcomesPreview_UserControl DataContext="{Binding PreviewIncomesOutcomes_ViewModel}" />
            </TabItem>
            
        </TabControl>
    </Grid>
</UserControl>